<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asifapps.oxforddigitalattendance">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:requestLegacyExternalStorage="true"
        android:largeHeap="true"
        android:icon="@drawable/oxfordlog"
        android:label="@string/app_name"
        android:roundIcon="@drawable/oxfordlog"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ImportExport" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SmsSenderActivity" />
        <activity android:name=".EnterStdRecordActivity" />
        <activity android:name=".ReviewAttActivity" />
        <activity android:name=".UpdateStudentActivity" />
        <activity android:name=".AddNewActivity" />
        <activity android:name=".ViewAttActivity" />
        <activity android:name=".StudentListActivity" />
        <activity android:name=".QRCodeScannerActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>